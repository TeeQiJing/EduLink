<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Project Title -->
        <TextView
            android:id="@+id/projectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"/>

        <!-- Project Description -->
        <TextView
            android:id="@+id/projectDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Short project description goes here."
            android:textColor="#555"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Number of Students and Educators -->
        <TextView
            android:id="@+id/numberOfStudentsAndEducators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Students: 0 | Educators: 0"
            android:textColor="#555"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Skills -->
        <TextView
            android:id="@+id/requiredSkills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills Required: "
            android:textColor="#555"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

        <!-- Deadline -->
        <TextView
            android:id="@+id/deadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deadline: 2025-01-07 10:00"
            android:textColor="#555"
            android:layout_marginTop="8dp"/>
        
        <TextView
            android:id="@+id/similarityScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Match Score: 0%"
            android:textColor="#FF5722"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>



        <!-- Join Button -->
        <Button
            android:id="@+id/joinButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join"
            android:layout_marginTop="16dp"
            android:backgroundTint="#FF6200EE"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
